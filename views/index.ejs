                <h2>Create User</h2>
                <div class="input-box">
                    <input type="text" name="name" placeholder="Username">
                </div>
                <div class="input-box">
                    <input type="email" name="email" placeholder="enter email">
                </div>
                <div class="input-box">
                  <input type="text" placeholder="Enter mobile" name="mobile">
              </div>

                <a href="/taskassign">
                    <p>Task assign</p>
                </a>
                <button type="submit" id="log-button">
                    SUBMIT
                </button>
                    <p>Want to show user table  <a href="/table">Show table</a></p>
            </form>
        </div>
    </div>
</section>

